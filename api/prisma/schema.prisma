generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int        @id @default(autoincrement())
  name       String?
  email      String     @unique
  password   String
  createdAt  DateTime   @default(now())
  workspace  Workspace? @relation(fields: [workspaceId], references: [id])
  workspaceId Int?
  decks      Deck[]
  reviews    ReviewLog[]
}

model Workspace {
  id      Int    @id @default(autoincrement())
  name    String
  ownerId Int
  users   User[]
  decks   Deck[]
}

model Deck {
  id          Int     @id @default(autoincrement())
  title       String
  description String?
  ownerId     Int
  cards       Card[]
  workspaceId Int?
}

model Card {
  id      Int        @id @default(autoincrement())
  deckId  Int
  deck    Deck       @relation(fields: [deckId], references: [id])
  front   String
  back    String
  media   String?
  tags    String?
  reviews ReviewLog[]
}

model ReviewLog {
  id           Int      @id @default(autoincrement())
  userId       Int
  user         User     @relation(fields: [userId], references: [id])
  cardId       Int
  card         Card     @relation(fields: [cardId], references: [id])
  quality      Int
  interval     Int
  easiness     Float
  repetitions  Int
  nextReviewAt DateTime
  createdAt    DateTime @default(now())
}
